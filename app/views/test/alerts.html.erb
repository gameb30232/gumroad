<button id="toggle-dark-mode" class="button" style="position: fixed; top: 10px; right: 10px; z-index: 9999;">Toggle Dark Mode</button>

<div class="container mx-auto p-4 max-w-7xl">
  <h2 class="text-lg font-bold mb-4">SCSS Alerts Baseline</h2>

  <!-- Simple text alerts -->
  <h3 class="text-md font-bold mt-8 mb-4">Simple Text Alerts</h3>
  <div role="alert" class="success mb-4">Your account has been updated</div>
  <div role="alert" class="danger mb-4">Invalid URL. Make sure your URL is a Gumroad URL and starts with "http" or "https".</div>
  <div role="alert" class="warning mb-4">You must enable and set up the commission for at least one product before sharing your affiliate link.</div>
  <div role="alert" class="info mb-4">This will be a test purchase as you are the creator of at least one of the products. Your payment method will not be charged.</div>
  <div role="status" class="info mb-4">No comments created.</div>

  <!-- Alerts with close button -->
  <h3 class="text-md font-bold mt-8 mb-4">Alerts with Close Button</h3>
  <div role="alert" class="success bg-filled mb-4">Success message <span class="close">✕</span></div>
  <div role="alert" class="danger bg-filled mb-4">Danger message <span class="close">✕</span></div>
  <div role="alert" class="warning bg-filled mb-4">Warning message <span class="close">✕</span></div>
  <div role="status" class="info bg-filled mb-4">Info message <span class="close">✕</span></div>

  <!-- Fixed position alert -->
  <h3 class="text-md font-bold mt-8 mb-4">Fixed Position Alert (Appears at top on action)</h3>
  <div role="alert" class="bg-filled fixed top-4 left-1/2 w-max max-w-[calc(100vw-2rem)] px-4 py-2 md:max-w-sm success" style="transform: translateX(-50%);">Your account has been updated</div>

  <!-- Alerts with complex content -->
  <h3 class="text-md font-bold mt-8 mb-4">Alerts with Complex Content</h3>
  <div role="alert" class="warning mb-4">
    <div>
      <p>You must meet the following requirements in order to connect a PayPal account:</p>
      <ul>
        <li>Your account must be marked as compliant</li>
        <li>You must have earned at least $100</li>
        <li>You must have received at least one successful payout</li>
      </ul>
    </div>
  </div>

  <div class="warning mb-4" role="alert">
    <div>
      <table class="reset">
        <tr>
          <td style="padding-right: 10px;">
            <img src="/assets/email/solid-shield-exclamation.png" alt="Warning" width="24" height="24">
          </td>
          <td style="text-align: left;">
            This was a test purchase — you have not been charged (you are seeing this message because you are logged in as the creator).
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div role="alert" class="info">
    <div>
      <strong>10</strong> sales
    </div>
  </div>

  <!-- Client-side alerts -->
  <h3 class="text-md font-bold mt-8 mb-4">Client-Side Alerts</h3>
  <div role="alert" class="warning mb-4">You must input an amount</div>
</div>

<script>
  document.getElementById('toggle-dark-mode').addEventListener('click', function() {
    document.documentElement.classList.toggle('dark');
  });
</script>
